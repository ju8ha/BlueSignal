<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VisitLogActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/visit_date"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:onClick="onText3Clicked"
            android:text="visitdate"
            android:textColor="@android:color/black"
            android:fontFamily="@font/app_main_font"
            android:textSize="19sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/visit_name"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:background="#4486c0"
                android:text="이름"
                android:fontFamily="@font/app_main_font"
                android:textSize="15dp"
                />

            <TextView
                android:id="@+id/visit_time"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:background="#4486c0"
                android:text="시간"
                android:fontFamily="@font/app_main_font"
                android:textSize="15dp"
                />

            <TextView
                android:id="@+id/visit_state"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:background="#4486c0"
                android:text="상태"
                android:fontFamily="@font/app_main_font"
                android:textSize="15dp"

                />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/visit_recyclerView"
            android:layout_width="414dp"
            android:layout_height="match_parent"
            android:background="#F0F0F0"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>